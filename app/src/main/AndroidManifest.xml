<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.htech.restaurant" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".MyApplication"
        android:label="@string/app_name"
        android:theme="@style/MockedAccountLight" >
        <activity
            android:name=".activity.SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Settings" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/ThemeDetail" />
        <activity
            android:name=".activity.MenuDetailActivity"
            android:theme="@style/ThemeDetail" />
        <activity
            android:name=".activity.RemarkActivity"
            android:label="@string/title_activity_remark"
            android:theme="@style/AppDialogTheme">
        </activity>
    </application>

</manifest>
